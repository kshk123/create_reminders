{
  "manifest_version": 3,
  "name": "Create Reminders",
  "description": "Save reminder dates from selected text and review them later in a popup.",
  "version": "0.1.1",
  "icons": {
    "16": "icons/icon-16.png",
    "32": "icons/icon-32.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  },
  "permissions": [
    "storage",
    "contextMenus",
    "activeTab",
    "identity",
    "scripting"
  ],
  "host_permissions": [
    "http://localhost:19092/*",
    "https://www.googleapis.com/*"
  ],
  "oauth2": {
    "client_id": "1096127465770-r3kiat8j3aumat4d33i80nkjo1179b28.apps.googleusercontent.com",
    "scopes": [
      "https://www.googleapis.com/auth/calendar.events"
    ]
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  },
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_title": "Reminders",
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon-16.png",
      "32": "icons/icon-32.png",
      "48": "icons/icon-48.png"
    }
  },
  "web_accessible_resources": [
    {
      "resources": ["capture-dialog.js"],
      "matches": ["<all_urls>"]
    }
  ]
}
